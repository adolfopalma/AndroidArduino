<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XXXXXXXXXXXXXXXXXX"
        android:id="@+id/tv_x" />

    <ImageButton
        android:id="@+id/bAbajo"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_alignBottom="@+id/bIzquierda"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/abajo"
        android:onClick="pulsarAtras" />

    <ImageButton
        android:id="@+id/bArriba"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/bAbajo"
        android:layout_alignLeft="@+id/bAbajo"
        android:layout_alignStart="@+id/bAbajo"
        android:layout_marginBottom="12dp"
        android:background="@drawable/arriba"
        android:onClick="pulsarAdelante" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/bIzquierda"
        android:layout_marginTop="16dp"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:background="@drawable/izquierda"
        android:layout_below="@+id/bDerecha"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="pulsarIzquierda" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/bDerecha"
        android:layout_marginTop="48dp"
        android:background="@android:drawable/ic_media_next"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/bIzquierda"
        android:layout_alignStart="@+id/bIzquierda"
        android:onClick="pulsarDerecha" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ZZZZZZZZZZZZZZZZ"
        android:layout_marginRight="33dp"
        android:layout_marginEnd="33dp"
        android:id="@+id/tv_z"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/bDerecha"
        android:layout_alignEnd="@+id/bDerecha" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YYYYYYYYYYYYYYYYYY"
        android:id="@+id/tv_y"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/bSensor"
        android:background="@android:drawable/sym_def_app_icon"
        android:onClick="pulsarSensor"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp"
        android:layout_alignTop="@+id/bIzquierda"
        android:layout_alignRight="@+id/tv_y"
        android:layout_alignEnd="@+id/tv_y"
        android:layout_marginTop="18dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/bRotar"
        android:layout_alignTop="@+id/bArriba"
        android:layout_alignRight="@+id/bSensor"
        android:layout_alignEnd="@+id/bSensor"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:onClick="pulsarRotar" />


</RelativeLayout>